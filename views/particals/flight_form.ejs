
<h2> Search for a Flight</h2>
<form action="/search_for_flights" method="POST">
    <label>Origin: </label>
    <input type="text" placeholder="Origin" name="origin">
    <label>Destination: </label>
    <input type="text" placeholder="Destination" name="destination">
    <label>Start Date: </label>
    <input type="date" id="start" name="flightDepartureDate" value=<%= locals.flightDepartureDate %>  min= <%= locals.todayDate %> />
    <label>Return Date: </label>
    <input type="date" id="return" name="flightReturnDate" value=<%= locals.flightReturnDate %>  min= <%= locals.todayDate %> />
    <label>One Way: </label>
    <input type="radio" name="one-way">
    <input type="Submit" value="Search"/>
</form>
